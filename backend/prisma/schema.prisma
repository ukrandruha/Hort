generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = "file:../database.sqlite"
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  role     String

  devices  Tc_user_device[]
}

model Robot {
  robotId     String @id
  name        String?
  status      String?
  battery     Int?
  cpu         Int?
  memory      Int?
  disk        Int?
  temperature Int?
  lat         Float?
  lng         Float?
  webrtclient Int?
  updatedAt   DateTime  @updatedAt

  user         User?    @relation(fields: [webrtclient], references: [id])
  users Tc_user_device[]
}

model Tc_user_device {
  userid   Int
  deviceid String

  user   User  @relation(fields: [userid], references: [id])
  robot  Robot @relation(fields: [deviceid], references: [id])

  @@id([userid, deviceid])
}

