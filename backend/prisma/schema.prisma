generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = "file:../database.sqlite"
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  role     String
}

model Robot {
  robotId     String @id
  name        String?
  status      String?
  battery     Int?
  cpu         Int?
  memory      Int?
  disk        Int?
  temperature Int?
  lat         Float?
  lng         Float?
  webrtclient Int?
  updatedAt   DateTime  @updatedAt

  user         User?    @relation(fields: [webrtclient], references: [id])
}

tc_user_device{
	userid Int
	deviceid Int
}

tc_user_group{
	userid Int
	groupid Int
}