datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  role     String  // admin | viewer
}

model Robot {
  robotId  String   @id
  name     String
  cpu      Int?
  memory   Int?
  disk     Int?
  cloud    Boolean? @default(true)
  lastSeen DateTime @updatedAt
}
