generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ENUMS

enum RobotSessionStatus {
  ACTIVE
  DISCONNECT_REQUESTED
  DISCONNECTED
  EXPIRED
}

// MODELS

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  role     String

  devices  Tc_user_device[]
  sessions RobotSession[] 
}

model Robot {
  robotId     String   @id
  name        String?
  status      String?
  battery     Int?
  cpu         Int?
  memory      Int?
  disk        Int?
  temperature Int?
  lat         Float?
  lng         Float?
  webrtclient Int?
  updatedAt   DateTime @updatedAt

  users       Tc_user_device[]
  sessions    RobotSession[]
  cameras RobotCamera[]
}

model Tc_user_device {
  userid   Int
  deviceid String

  user   User  @relation(fields: [userid], references: [id])
  robot  Robot @relation(fields: [deviceid], references: [robotId])

  @@id([userid, deviceid])
}

// ROBOT SESSIONS

model RobotSession {
  id               String              @id @default(uuid())

  robotId          String
  operatorId       Int

  status           RobotSessionStatus  @default(ACTIVE)

  controlConnId    String?
  lastHeartbeatAt  DateTime?

  disconnectReason String?
  disconnectedBy   String?

  startedAt        DateTime            @default(now())
  disconnectAt     DateTime?
  updatedAt        DateTime            @updatedAt

  robot            Robot               @relation(fields: [robotId], references: [robotId])
  operator         User                @relation(fields: [operatorId], references: [id])

  @@index([robotId])
  @@index([operatorId])
  @@index([status])

  
}

model RobotCamera {
  id        Int      @id @default(autoincrement())
  robotId   String
  name      String
  port      String
  active    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  robot Robot @relation(fields: [robotId], references: [robotId])

  @@unique([robotId, port])
  @@index([robotId])
}
