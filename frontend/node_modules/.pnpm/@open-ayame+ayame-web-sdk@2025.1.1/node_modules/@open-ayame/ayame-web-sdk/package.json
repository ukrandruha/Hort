{
  "name": "@open-ayame/ayame-web-sdk",
  "version": "2025.1.1",
  "description": "WebRTC Signaling Server Ayame Web SDK",
  "author": "Shiguredo Inc.",
  "license": "Apache-2.0",
  "homepage": "https://github.com/OpenAyame/ayame-web-sdk",
  "type": "module",
  "module": "dist/ayame.mjs",
  "exports": {
    ".": {
      "types": "./dist/ayame.d.ts",
      "import": "./dist/ayame.mjs",
      "require": "./dist/ayame.mjs"
    }
  },
  "bugs": {
    "url": "https://discord.gg/shiguredo"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OpenAyame/ayame-web-sdk.git"
  },
  "directories": {
    "doc": "docs/"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@playwright/test": "1.50.1",
    "@types/node": "22.13.5",
    "@types/webrtc": "0.0.44",
    "typedoc": "0.27.8",
    "typescript": "5.7.3",
    "vite": "6.1.1",
    "vite-plugin-dts": "4.5.0"
  },
  "engines": {
    "node": ">=20.11"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "watch": "vite build --watch",
    "dev": "vite --config devtools/vite.config.mjs",
    "build:devtools": "vite build --config devtools/vite.config.mjs",
    "preview:devtools": "vite preview --config devtools/vite.config.mjs",
    "build:typedoc": "typedoc",
    "lint": "biome lint ./src",
    "fmt": "biome format --write ./src",
    "check": "tsc --noEmit",
    "dist": "pnpm clean && pnpm install && pnpm build",
    "clean": "git clean -ffdx -e .env.local -e .env",
    "test": "playwright test --project=chromium"
  }
}