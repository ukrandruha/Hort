{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",

    "moduleResolution": "Bundler",         
    "strict": false,
    "strictNullChecks": true,

    "declaration": false,                    
    "importHelpers": true,

    "experimentalDecorators": true,         

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "baseUrl": ".",

    "newLine": "LF",

    "types": ["node", "webrtc"],             
    "lib": ["dom", "esnext"],                

    "skipLibCheck": true,                    
    "isolatedModules": true,
    
    "outDir": "./dist",
    "rootDir": "./src"
  },

  "include": ["src"],
  "exclude": ["node_modules"]
}

